# Database — update with your local PostgreSQL credentials
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/whodiesinthismovie"

# TMDB image CDN base URL
NEXT_PUBLIC_TMDB_IMAGE_BASE="https://image.tmdb.org/t/p"

# Google Gemini API key (primary LLM — falls back to Ollama if not set)
# Get a key from https://aistudio.google.com/apikey
# GEMINI_API_KEY=""
# GEMINI_MODEL=""

# Ollama endpoint for LLM fallback (defaults to http://localhost:11434)
# OLLAMA_ENDPOINT="http://localhost:11434"

# Ollama model name (defaults to mistral)
# OLLAMA_MODEL="mistral"

# TMDB API key — bearer token (required for Phase 5 ingestion worker)
# TMDB_API_KEY=""

# Sentry DSN (optional)
# SENTRY_DSN=""
# NEXT_PUBLIC_SENTRY_DSN=""
